#include <stdio.h>
struct frac
{
  int den[10];
  int num[10];
  int n;
}s;
int input()
{
  printf("Enter the limit  :");
  scanf("%d",&s.n);
  for(int i=0;i<s.n;i++)
  {
    printf("Enter the numerator : ");
    scanf("%d",&s.num[i]);
    printf("Enter the denominator : ");
    scanf("%d",&s.den[i]);
  }
  return 0;
}
int sum()
{
  int lcm=1,sum=0;
  for(int i=0;i<s.n;i++)
  {
    lcm=lcm*s.den[i];
  }
  int l[10];
  for(int i=0;i<s.n;i++)
  {
    l[i]=lcm/s.den[i];
    sum=sum+(l[i]*s.num[i]);
  }
  printf("Sum : %d/%d",sum,lcm);
  return 0;
}
int main(void)
{
  input();
  sum();
  return 0;
}
